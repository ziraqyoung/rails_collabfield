<div class="col-sm-3 single-post-card" id="<%= post_path(post.id) %>">
  <div class="card">
    <div class="card-header">
      <h4 class="post-text">
        <%= truncate(post.title, :length => 60) %>
      </h4>
    </div>
    <div class="card-body">
      <div class="post-content">
        <div class="posted-by">Posted by <%= post.user.name %></div>
        <h3 class="card-title"><%= post.title %></h3> 
        <p class="card-text"><%= post.content %></p>
        <%= link_to "I'm interested", post_path(post.id), class: ' btn btn-secondary interested' %>
      </div>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 -->